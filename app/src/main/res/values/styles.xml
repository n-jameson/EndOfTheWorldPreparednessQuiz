<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
    </style>

    <style name="IntroText">
        <!-- Defines Text Color -->
        <item name="android:textColor">#ffffff</item>
        <!-- Defines Text SIze -->
        <item name="android:textSize">16sp</item>
        <!-- Defines Text Style -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextFieldText">
        <!-- Defines Text Color -->
        <item name="android:textColorHint">#F6F6F6</item>
    </style>

    <style name="ButtonText">
        <!-- Defines Text Style -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionTextFormat">
        <!--Defines Text Color -->
        <item name="android:textColor">#ffffff</item>
        <!--Defines Text Size -->
        <item name="android:textSize">14sp</item>
        <!--Defines Test Style -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnswerText">
        <!-- Defines Text Color -->
        <item name="android:textColorHint">#F6F6F6</item>
        <!-- Defines Text Style -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProclamationFormat">
        <!--Defines Text Color-->
        <item name="android:textColor">#7E200C</item>
        <!--Defines Text Size -->
        <item name="android:textSize">21sp</item>
        <!--Defines Text Style -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SummaryFormat">
        <!--Defines Text Color-->
        <item name="android:textColor">#7E200C</item>
        <!--Defines Text Size -->
        <item name="android:textSize">17sp</item>
        <!--Defines Text Style -->
        <item name="android:textStyle">bold</item>
    </style>



</resources>
